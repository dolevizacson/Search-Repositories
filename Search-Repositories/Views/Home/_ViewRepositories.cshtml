@model IEnumerable<Search_Repositories.Models.ShowrRpositoriesModel>

<div class="row">

    @foreach (var repository in Model)
    {
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="thumbnail" style="display:flex; flex-wrap:nowrap; flex-direction:column">
                <div clas="thumbnail" style="display:flex; flex-wrap:nowrap; justify-content:center; background-color:#e7e7e7;padding:5px 0">
                    <img src="@Html.DisplayFor(modelItem => repository.Avatar)" style="max-height:100px; max-width: 100px " />
                </div>
                <div class="caption" style="display:flex; justify-content:center">
                    <h3>@Html.DisplayFor(modelItem => repository.RepositoryName)</h3>
                </div>
                <div style="display:flex; justify-content:center">
                    <button class="btn btn-primary">Bookmark Repository</button>
                </div>
            </div>
        </div>
    }
</div>
